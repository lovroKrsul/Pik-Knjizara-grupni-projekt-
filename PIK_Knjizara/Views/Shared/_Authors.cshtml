@model IEnumerable<PIK_Library.Model.Author>
@{ int x = 1;}
<div class="container">

    @foreach (var item in Model)
    {
        if (x % 3 == 1)
        {
            @:<div class="row">
            }
           
            @:<div class="col-md-4" style="text-align:center">@Html.ActionLink($"{item.FirstName} {item.LastName}", "AuthorDetails","Author",new { id = item.ID },null)</div>
            if (x % 3 == 0)
            {
            @:</div>
        }
        x++;
    }
</div>