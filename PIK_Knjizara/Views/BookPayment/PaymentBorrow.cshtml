@model PIK_Library.Model.GetBook

@{
    ViewBag.Title = "Payment";
}

<h2>Payment</h2>

<div class="d-flex flew-row">
    <div class="w-50">
        @Html.Partial("_Book", Model.Book)
    </div>
    <div class="m-2">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Book.BorrowPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.BorrowPrice) EUR na tjedan
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Delivery)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Delivery)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReturnDate)
            </dd>
        </dl>

        <div>
            @Html.ActionLink("Pay", "PayBorrow", "BookPayment", new { Id = Model.IdBorrow }, new { @class = "btn btn-outline-success" })
            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
