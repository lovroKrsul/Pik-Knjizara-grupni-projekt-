@model PIK_Library.Model.Book

<div class="card m-3" style="width: 15rem;">
    <img class="image" src="@Model.Cover" alt="Picture" />

    <div class="card-body">

        <div class="d-flex flex-row">
            <div class="w-75">
                <h4>
                    @Html.DisplayFor(model => model.Title)
                </h4>
                <h5>
                    @Model.Author.ToString()
                </h5>

                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>

                <h5>
                    @Html.DisplayFor(model => model.Price) EUR
                </h5>

                <div class="d-flex flex-column-reverse">
                    @Html.ActionLink("Buy", "Index", "Book", new { Id = Model.IdBook }, new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        </div>
    </div>
</div>
