@model PIK_Library.Model.ReturnBook

@{
    ViewBag.Title = "ReturnBook";
}

<h2>Return book</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h4>ReturnBook</h4>
        <hr />
        <dl class="dl-horizontal">

            @Html.HiddenFor(model => model.IdBorrow)

            <dt>
                @Html.DisplayNameFor(model => model.User)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.DisplayFor(model => model.User.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.Title)
            </dd>

            @Html.HiddenFor(model => model.Book.IdBook)
            @Html.HiddenFor(model => model.Book.Title)

            <dt>
                @Html.DisplayNameFor(model => model.Book.ISBN)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.ISBN)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Book.Used)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Book.Used)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReturnDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Overdue)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Overdue) Days
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.InStorePayment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InStorePayment)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Delivery)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Delivery)
            </dd>
        </dl>
    </div>

    <div>
        <input type="submit" name="name" value="Return" class="btn btn-outline-dark" />
    </div>
}
