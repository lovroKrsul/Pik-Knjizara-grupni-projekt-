@model IEnumerable<PIK_Library.Model.ReturnBook>


@foreach (var item in Model)
{
    <div class="card d-flex flex-row flex-wrap m-3 border-4">
        <div>
            <img class="image" style="height: 10rem; width: 7rem" src="@item.Book.Cover" alt="Picture" />
        </div>
        <div class="card-body d-flex flex-row flex-wrap mt-3">

            <h4 class="m-2">
                @Html.DisplayFor(modelItem => item.Book.Title)
            </h4>

            <h5 class="m-2">
                @item.Book.Author.ToString()
            </h5>

            <p class="m-2">
                @Html.DisplayFor(modelItem => item.Book.Description)
            </p>

            <h2 class="m-2">
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </h2>
        </div>
    </div>
}
